-#layout: default
#recent-posts
  {% for post in site.posts limit:10 offset:0 %}
  %article.post
    %header
      %h2
        %a.title{href:"{{post.url}}"} {{post.title}}
    .content {{post.content}}
    %footer
      %a.read-more{href:"{{post.url}}"} Read more
      .date {{post.creation-date || date:"%d %b %Y"}}
  {% endfor %}

%script{src:"{{site.paths.vendor}}/jquery.js"}
%script{src:"{{site.paths.vendor}}/bootstrap/docs/assets/js/bootstrap-tooltip.js"}
