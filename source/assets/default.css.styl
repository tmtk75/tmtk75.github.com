@charset "utf-8"
@import url("http://fonts.googleapis.com/css?family=Questrial|Michroma|Oxygen:700");
@import "font-awesome/css/font-awesome.min.css"

// reset
*
  margin 0
  padding 0

a
  text-decoration none

ul, ol
  list-style none

img
  vertical-align middle

// fluid-image
img
  max-width 100%

// basic typography
html
  font-family "Helvetica Neue", Helvetica, Arial, verdana, sans-serif

//
i[class^="icon-"]
  font-size 2rem
  line-height 2rem
  margin-right 1px

p, pre, ul, ol
  margin-bottom 1rem

ul
  list-style disc none outside
  margin-left 20px

//
main
  margin 0 20px
  
pre, code
  font-family Menlo, Monaco, Consolas, "Courier New", monospace
  font-size 1rem*0.9
  color #333333
  background-color #f5f5f5
  border 1px solid #cccccc
  //white-space nowrap
  //word-break break-all
  //word-wrap break-word
  //line-height 1.41421356

pre
  padding 9px 14px
  overflow auto

code
  padding 0 1rem*0.25
  //margin 0 1rem*0.25
  //white-space nowrap
  color #d14

a
  color #428bca
  &:hover, &:focus
    color #2a6496


//
main
  margin-top 1rem

.date
  font-family Questrial

.PostIndex
  header
    text-align center
    margin-bottom 1rem*1.5
    .date
      font-size 1rem*1.2
      line-height 1rem*1.5
  h1
    font-family Michroma
    font-size 1rem*1.5
  h2
    font-size 1rem*1.414
    line-height 1rem*1.5
  h3
    font-size 1rem*1.2
    line-height 1rem*1.5

  .Post
    margin-top 1rem*1.5
  

.Post
  header
    width 90%
    margin 0 auto
    text-align center
    margin-bottom 1rem*1.5


//
.ThePost
  h1
    font-size 1rem*1.5
    line-height 1
    margin-bottom 1rem*1.5


//
@media (min-width: 1024px)
  body
    margin 0 0 0 40px
    width 960px

