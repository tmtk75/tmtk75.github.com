@charset "utf-8"
@import url("http://fonts.googleapis.com/css?family=Questrial|Michroma|Oxygen:700");
@import "font-awesome/css/font-awesome.min.css"

// reset
*
  margin 0
  padding 0

a
  text-decoration none

ul, ol
  list-style none

img
  vertical-align middle

// fluid-image
img
  max-width 100%

// basic typography
html
  font-family "Helvetica Neue", Helvetica, Arial, verdana, sans-serif

//
i[class^="icon-"]
  font-size 3rem
  line-height 3rem
  margin-right 1px

//
body
  margin 0 20px
  
h1
  font-size 1rem*1.5
  line-height 1
  margin-bottom 1rem*1.5

p, pre, ul, ol
  margin-bottom 1rem

ul
  list-style disc none outside
  margin-left 20px

//
header
  .date
    font-family Questrial

pre, code
  color #333333
  font-family Monaco, Menlo, Consolas, "Courier New", monospace
  background-color #f5f5f5
  border 1px solid #cccccc
  //white-space nowrap
  //word-break break-all
  //word-wrap break-word
  //line-height 1.41421356

pre
  padding 9px 14px
  overflow auto

code
  padding 0 1rem*0.25
  margin 0 1rem*0.25
  white-space nowrap


@media (min-width: 1024px)
  body
    margin 0 0 0 40px
    width 960px

