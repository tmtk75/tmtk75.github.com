@charset "utf-8"
@import url("http://fonts.googleapis.com/css?family=Questrial|Michroma|Oxygen:700");
@import "font-awesome/css/font-awesome.min.css"

// reset
*
  margin 0
  padding 0

a
  text-decoration none

ul, ol
  list-style none

img
  vertical-align middle

// fluid-image
img
  max-width 100%

// basic typography
html
  font-family "Helvetica Neue", Helvetica, Arial, verdana, sans-serif

//
i[class^="icon-"]
  font-size 2rem
  line-height 2rem
  margin-right 1px

p, pre, ul, ol
  margin-bottom 1rem

//
main
  margin 0 20px
  
pre, code
  font-family Menlo, Monaco, Consolas, "Courier New", monospace
  font-size 1rem*0.9
  color #333333
  background-color #f5f5f5
  border 1px solid #cccccc

pre
  padding 9px 14px
  overflow auto

code
  padding 0 1rem*0.25
  color #d14

a
  color #428bca
  &:hover, &:focus
    color #2a6496
  &:visited
    color darken(#2a6496, 10%)


//
body
  color #222

  > header
    background-image url(geometry.png)
    padding-top 1rem*1.5*2
    padding-bottom 1rem*1.5*3


//header
//  background-image url(/priga.jp_M02973.jpg)

h1.logo
  font-family Michroma
  font-size 1rem*1.5
  text-align center
  margin 0
  //text-shadow -1px 1px 0 rgba(255, 255, 255, 1)
  a, a:hover, a:focus, a:visited
    color #222

.Post
  header
    text-align center
    margin-bottom 1rem*1.5
    .date
      font-family Questrial
      font-size 1rem*1.2
      line-height 1rem*1.5
  h1
    font-size 1rem*1.5
    margin 3rem 0 1rem 0
  h2
    font-size 1rem*1.414
    line-height 1rem*1.5
    margin 2rem 0 1rem 0
  h3
    font-size 1rem*1.2
    line-height 1rem*1.5
    margin 1rem 0
  ul
    list-style initial
    margin-left 2rem
  ol
    list-style decimal
    margin-left 2rem

.MenuLinks
  text-align center

.Post.ja
  h2
    text-align left
  line-height 1rem*1.5

.Post
  header
    width 90%
    margin 0 auto
    text-align center
    margin-bottom 1rem*1.5

  margin-top 1rem*1.5*3

body > footer
  padding 1rem*1.5 1rem*1.5 3rem 1rem*1.5
  background-color #f1f1f1
  > aside
    h2
      text-align center

.SocialButtons
  margin-top 1rem*1.5
  margin-bottom 1rem*1.5
  ul
    list-style none
    margin 0
    li
      display inline-block

.SocialIcons
  text-align center
  a
    margin 0 0.2rem
    color darken(#f1f1f1, 50%)
  .twitter:hover
    color #4099FF
  .github:hover
    color #000
  .facebook:hover
    color #3B5998
  .googleplus:hover
    color #d34836
  .linked-in:hover
    color #4875B4

.SocialButtons, .AdSense
  text-align center

.Copyright, .Privacy-policy, .License
  margin-top 1rem*1.5
  text-align center
  font-size 90%

.AllTags, .PostsTagged, .AllPosts
  ul li
    line-height 1.5rem

//
@media (min-width: 640px)
  main
    margin 0 auto
    width 80px*8

  .Post
    h1
      margin-top 5rem
    h2
      margin-top 4rem
    h3
      margin-top 3rem
    p
      margin-top 2rem
