@charset "utf-8"
@import url("http://fonts.googleapis.com/css?family=Questrial|Michroma|Oxygen:700");
@import "font-awesome/css/font-awesome.min.css"

// reset
*
  margin 0
  padding 0

a
  text-decoration none
  
ul, ol
  list-style none

img
  vertical-align middle

// fluid-image
img
  max-width 100%

// basic typography
html
  font-family verdana, sans-serif

//
i[class^="icon-"]
  font-size 3rem
  line-height 3rem
  margin-right 1px

//
body
  margin 0 20px
  
h1
  font-size 1rem*1.5
  line-height 1
  margin-bottom 1rem*1.5

p, pre
  margin-bottom 1rem

//
header
  .date
    font-family Questrial

pre
  color #333333
  font-family Monaco, Menlo, Consolas, "Courier New", monospace
  background-color #f5f5f5
  border 1px solid #cccccc
  padding 9px 14px
  //white-space nowrap
  //word-break break-all
  //word-wrap break-word
  //line-height 1.41421356
  overflow auto

