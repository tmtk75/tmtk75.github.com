#recent-posts
  | {% for post in site.posts limit:10 offset:0 %}
  | {%   if (post.variation-of == null) and (post.lang == page.lang or (page.lang == "en" and post.lang == null)) %}
  article.post{:class => "{ page.lang}}"
    header
      h2
        a.title{:href => "{{post.url}}"} { post.title}
    .content { post.content}
    footer
      a.read-more{:href => "{ post.url}}"
      .date { post.creation-date || date:"%d %b %Y"}
  | {%   endif %}
  | {% endfor %}
