-#layout: default

%article.post
  %header
    %h2
      .date
        .day {{page.creation-date || date:"%d"}}
        .month {{page.creation-date || date:"%b"}}
        .year {{page.creation-date || date:"%Y"}}
      .title {{page.title}}
  .content
    {{content}}

  %aside#disqus_thread_container
    #disqus_thread
    :javascript
      var disqus_shortname = 'titleisunfixed'; // required: replace example with your forum shortname
      (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
    %noscript
      Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a>
    %a.dsq-brlink{href:"http://disqus.com"} blog comments powered by <span class="logo-disqus">Disqus</span>
