-#layout: default
#the
  %article.post
    %header
      %h2
        .title {{page.title}}
        /%small.date {{page.date|date_to_string}}
        %small.date {{page.creation-date}}
    .content
      {{content}}

  %nav
  /
    {%if page.previous%}
    %a{href:'{{site.url}}{{page.previous.url}}',rel:'prev',title:'{{page.previous.title}}'}
      {{page.previous.title}}
    {%endif%}
    {%if page.next%}
    %a{href:'{{site.url}}{{page.next.url}}',rel:'next',title:'{{page.next.title}}'}
      {{page.next.title}}
    {%endif%}

%aside#disqus_thread_container
  #disqus_thread
  :javascript
    var disqus_shortname = 'titleisunfixed'; // required: replace example with your forum shortname
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
  %noscript
    Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a>
  %a.dsq-brlink{href:"http://disqus.com"} blog comments powered by <span class="logo-disqus">Disqus</span>
