-#layout: default
%article#the.post
  %header
    %h1
      .date
        .day {{page.creation-date || date:"%d"}}
        .month {{page.creation-date || date:"%b"}}
        .year {{page.creation-date || date:"%Y"}}
      .title {{page.title}}
    %ul.tags
      {% for tag in page.tags %}
      %li.tag{"data-bind"=>"click:show_links_for_tag","data-tag"=>'{{tag}}'} {{tag}}
      {% endfor %}
  
  %div{"data-bind"=>"visible:links_shown, template:{name:'links_for_tag',foreach:links}"}

  %script{type:"text/html",id:"links_for_tag"}
    %h1 hello wolrd
    .t
      .t title:
      %span{"data-bind"=>"text:title"}
      %span{"data-bind"=>"text:path"}

  .content
    {{content}}

  %aside#disqus_thread_container
    #disqus_thread
    %script{src:"{{site.vendor.url}}/disqus.js"}
    %noscript
      Please enable JavaScript to view the
      <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a>
    %a.dsq-brlink{href:"http://disqus.com"} blog comments powered by <span class="logo-disqus">Disqus</span>
